*{ 
	margin:0;
	padding:0;
}
html, body{
	width: 100%;
	height: 100%;
	transition: width 1s, height 1s;
}
body{
	background-image: linear-gradient(to right, rgb(69, 17, 33), rgb(24, 41, 87));

	font-family: 'Montserrat', sans-serif;
}
.okno{
	height:400px;
	width:400px;
	position:absolute;
	top: 50%;
	left: 50%;
	transform: translate(-50%, -50%);
	background-image: linear-gradient(45deg, rgba(213,56,106,255), rgba(39,68,146,255));
	text-align:center;
	border-radius:30px;
	color:white;
	transition: width 1s, height 1s;
}
.okno.hidden {
            opacity: 0;
}
.zgori{
	height:150px;
	margin-top:10px;
	font-size:30px;
}
.sredina{
	height:150px;
	line-height:25px;
	margin-top:4px;
}
.spodi{
	height:100px;
}
.norm{
	margin-top: 10px;
	margin-bottom:30px;
	border: 3px rgba(39,68,146,255) solid;
	border-radius: 5px;
	padding: 2px;
	height: 40px;
	width: 250px;
	font-size: 1em;
}
.norm1{
	margin-top: 1px;
	margin-bottom:3px;
	border: 3px rgba(39,68,146,255) solid;
	border-radius: 5px;
	padding: 2px;
	height: 35px;
	width: 250px;
	font-size: 1em;
}
.tadr{
	margin-top: 1px;
	margin-bottom:3px;
	border: 3px rgba(39,68,146,255) solid;
	border-radius: 5px;
	padding: 2px;
	height: 43px;
	width: 260px;
	font-size: 1em;
}
.swal2-popup .swal2-styled:focus {
    box-shadow: none !important;
	font-family: 'Montserrat', sans-serif;
}